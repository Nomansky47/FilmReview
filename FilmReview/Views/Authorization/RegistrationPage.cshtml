@model FilmReview.Models.Users

@{
    string reg = "";
    ViewData["Title"] = "Registration";
    reg = ViewData["Registration"].ToString();
}

<h1 class="text-center">@reg</h1>
<div class="row">
    <div class="col-md-4 mx-auto">
        <form method="post">
            <div class="form-group">
                <label asp-for="NickName" class="control-label"></label>
                <input name="NickName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserLogin" class="control-label"></label>
                <input name="UserLogin" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input name="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input name="Surname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <label asp-for="Patronymic" class="control-label"></label>
                <input name="Patronymic" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Регистрация" asp-action="Register" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
