@{
    ViewData["Title"] = "Aothorization Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Authorization Page</h1>
    <form method="post">
        <div class="form-group">
            <input type="text" name="Login" />
        </div>
        <div class="form-group">
            <input type="password" name="Password" />
        </div>
        <div class="form-group">
            <input asp-action="Authorize" type="submit" value="Enter" />
        </div>
    </form>
</div>
