@{
    ViewData["Title"] = "Authorization Page";
    string style = "margin-bottom: 11px;";
}

    <h1 class="text-center">@ViewData["Authorization"]</h1>
<div class="row">
    <div class="col-md-3 mx-auto">
    <form method="post">
            <div class="form-group" style="@style">
                <input type="text" name="Login" class="form-control"  />
        </div>
            <div class="form-group" style="@style">
            <input type="password" name="Password" class="form-control" />
        </div>
            <div class="form-group" style="@style">
            <input asp-action="Authorize" type="submit" value="Enter" class="btn btn-success" />
        </div>
    </form>
    </div>
</div>